import sys
sys.path.insert(1,'/usr/share/andromeda/')

if len(sys.argv) == 1:
    """
        Start the GUI
    """
    from GUI import *
    GObject.threads_init()
    Gdk.threads_init()
    main=GUI()
    Gtk.main()

elif len(sys.argv) >= 2:
    """
        Do some console command
    """
    
    arg = sys.argv[1]
    
    if arg in ['--next','--play','--play-pause','--pause','--stop']:
        """
            Communicate with the GUI
        """
        import socket
        import os
        from Paths import Paths; PATHS=Paths()
        
        if arg == '--next':
            code=100
        elif arg == '--play':
            code=150
        elif arg == '--play-pause':
            code=175
        elif arg == '--pause':
            code=200
        elif arg == '--stop':
            code=250
        
        code=bytes(str(code), 'utf-8')
        
        if os.path.exists(PATHS.port):
            with open(PATHS.port, mode='rt', encoding='utf-8') as f:
                port=int(f.read())

            clientsocket=socket.socket(socket.AF_INET, socket.SOCK_STREAM)
            clientsocket.settimeout(1)
            clientsocket.connect(('localhost', port))
            clientsocket.send(code)
            clientsocket.close()

        else:
            print("Error: Andromeda is not running or the port file is missing.")
            print("If Andromeda is running use: Settings > Port > Save")
        
        
    elif arg in ['--help','-h']:
        print('''
Usage: andromeda [options..]

Playback Control Options

    --next                     Play the next track.
    --play                     Start playback
    --play-pause               Toggle playback
    --pause                    Pause playback
    --stop                     Completely stop playback
''')
    else:
        print("Wrong Argument, use --help to know more about the commands.")
        
    
    
    


